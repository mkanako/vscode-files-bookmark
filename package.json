{
  "name": "files-bookmark",
  "displayName": "Files Bookmark",
  "description": "Files Bookmark",
  "version": "0.0.1",
  "icon": "images/icon.png",
  "license": "MIT",
  "publisher": "kanako",
  "repository": {
    "type": "git",
    "url": "https://github.com/mkanako/vscode-files-bookmark.git"
  },
  "engines": {
    "vscode": "^1.46.0"
  },
  "categories": [
    "Other"
  ],
  "keywords": [
    "file",
    "bookmark"
  ],
  "activationEvents": [
    "onStartupFinished",
    "onCommand:files-bookmark.addFile",
    "onView:FilesBookmarkExplorer"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "FilesBookmark",
          "title": "Files Bookmark",
          "icon": "images/bookmark-activity-bar.svg"
        }
      ]
    },
    "views": {
      "FilesBookmark": [
        {
          "id": "FilesBookmarkExplorer",
          "name": "Files Bookmark Explorer"
        }
      ]
    },
    "commands": [
      {
        "command": "files-bookmark.addFile",
        "title": "Files Bookmark: Add Current File To Bookmark",
        "icon": "$(add)"
      },
      {
        "command": "files-bookmark.deleteFile",
        "title": "Delete File",
        "icon": "$(close)"
      },
      {
        "command": "files-bookmark.deleteGroup",
        "title": "Delete Group",
        "icon": "$(close)"
      },
      {
        "command": "files-bookmark.renameGroup",
        "title": "Rename Group",
        "icon": "$(code)"
      },
      {
        "command": "files-bookmark.newGroup",
        "title": "New Group",
        "icon": "$(new-file)"
      },
      {
        "command": "files-bookmark.refresh",
        "title": "Refresh",
        "icon": "$(refresh)"
      },
      {
        "command": "files-bookmark.openFile",
        "title": "open file"
      }
    ],
    "menus": {
      "commandPalette": [
        {
          "command": "files-bookmark.deleteFile",
          "when": "false"
        },
        {
          "command": "files-bookmark.refresh",
          "when": "false"
        },
        {
          "command": "files-bookmark.deleteGroup",
          "when": "false"
        },
        {
          "command": "files-bookmark.renameGroup",
          "when": "false"
        },
        {
          "command": "files-bookmark.newGroup",
          "when": "false"
        }
      ],
      "view/title": [
        {
          "command": "files-bookmark.refresh",
          "when": "view == FilesBookmarkExplorer",
          "group": "navigation@1"
        },
        {
          "command": "files-bookmark.newGroup",
          "when": "view == FilesBookmarkExplorer",
          "group": "navigation@2"
        },
        {
          "command": "files-bookmark.addFile",
          "when": "view == FilesBookmarkExplorer",
          "group": "navigation@3"
        }
      ],
      "view/item/context": [
        {
          "command": "files-bookmark.deleteFile",
          "when": "view == FilesBookmarkExplorer && viewItem == child",
          "group": "inline"
        },
        {
          "command": "files-bookmark.renameGroup",
          "when": "view == FilesBookmarkExplorer && viewItem == parent",
          "group": "inline@1"
        },
        {
          "command": "files-bookmark.deleteGroup",
          "when": "view == FilesBookmarkExplorer && viewItem == parent",
          "group": "inline@2"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "lint": "eslint src --fix --ext ts",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/glob": "^7.1.3",
    "@types/mocha": "^7.0.2",
    "@types/node": "^14.0.20",
    "@types/vscode": "^1.46.0",
    "@typescript-eslint/eslint-plugin": "^2.30.0",
    "@typescript-eslint/parser": "^2.30.0",
    "eslint": "^6.8.0",
    "eslint-config-standard": "^14.1.1",
    "eslint-plugin-import": "^2.22.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-standard": "^4.0.1",
    "glob": "^7.1.6",
    "mocha": "^7.1.2",
    "typescript": "^3.8.3",
    "vscode-test": "^1.3.0"
  }
}
